<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Tweets monitoring</display-name>
 
	<servlet>
		<servlet-name>RestartTweetProducerServlet</servlet-name>
		<servlet-class>edu.stevens.decision.tweetmonitoring.RestartTweetProducerServlet</servlet-class>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>RefreshPendingTweetServlet</servlet-name>
		<servlet-class>edu.stevens.decision.tweetmonitoring.RefreshPendingTweetServlet</servlet-class>
		
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>RestartTweetConsumerServlet</servlet-name>
		<servlet-class>edu.stevens.decision.tweetmonitoring.RestartTweetConsumerServlet</servlet-class>
		
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>RestartTweetProducerServlet</servlet-name>
		<url-pattern>/RestartTweetProducerServlet/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RefreshPendingTweetServlet</servlet-name>
		<url-pattern>/RefreshPendingTweetServlet/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestartTweetConsumerServlet</servlet-name>
		<url-pattern>/RestartTweetConsumerServlet/</url-pattern>
	</servlet-mapping>

  	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
  
</web-app>
